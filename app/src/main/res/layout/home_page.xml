<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id= "@+id/home_layout"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:weightSum="1.70">


    <RelativeLayout
        android:background="@drawable/statue_of_hope"
        android:layout_width = "0dp"
        android:layout_weight="0.70"
        android:layout_height="match_parent"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/home_page_layout"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/content_frame"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="175dp"
            android:id="@+id/radioButton"
            style="@android:style/Widget.CompoundButton.RadioButton"
            android:checked="false"
            android:duplicateParentState="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/content_frame"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="205dp"
            android:id="@+id/radioButton2"
            style="@android:style/Widget.CompoundButton.RadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/content_frame"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="235dp"
            android:id="@+id/radioButton3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/content_frame"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="265dp"
            android:id="@+id/radioButton4" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="295dp"
            android:id="@+id/radioButton5" />



        <TextView
            android:text="Quote of the Day"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:id="@+id/textViewQOTD" />

        <ImageSwitcher
            android:layout_width="450dp"
            android:layout_height="375dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:id="@+id/imageSwitcher">

        </ImageSwitcher>

        <ImageButton
            android:src="@drawable/calendarikmage"
            android:layout_marginLeft="550dp"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarButton" />





    </RelativeLayout>

</LinearLayout>
